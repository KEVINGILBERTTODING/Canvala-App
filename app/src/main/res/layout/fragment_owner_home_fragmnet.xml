<?xml version="1.0" encoding="utf-8"?>

<layout
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.admin.home.AdminHomeFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/wave_main"
            android:padding="@dimen/_10sdp"
            android:id="@+id/rlHeader"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popmed"
                    android:textColor="@color/white"
                    android:id="@+id/tvnama"
                    android:textSize="@dimen/_9ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola Transaksi Apa Hari ini?"
                    android:fontFamily="@font/popsem"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"/>


            </LinearLayout>





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlHeader"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Owner"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/popsem"
                android:textColor="@color/black2"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvMenuTransaksi"
                        android:layout_width="match_parent"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:contentPadding="@dimen/_5sdp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transaksi"
                                android:fontFamily="@font/popsem"
                                android:textColor="@color/main"
                                android:textSize="@dimen/_12ssp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kelola seluruh transaksi"
                                android:fontFamily="@font/popsem"
                                android:textColor="@color/black2"
                                android:textSize="@dimen/_9ssp"/>
                        </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/baseline_keyboard_arrow_right_24"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


    </RelativeLayout>

</layout>
