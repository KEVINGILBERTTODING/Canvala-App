<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:contentPadding="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/sad_animation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_210sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/cart_anim" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masukkan ke keranjang"
                    android:fontFamily="@font/popsem"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/main_ligh"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvImage"
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ivProduct"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@color/main_ligh"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/cvImage"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNamaProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/popmed"
                            android:text="Canvas 20 x20"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black2"/>


                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/popmed"
                            android:text="Rp. 1.000.000"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/main"/>

                        <EditText
                            android:layout_width="@dimen/_80sdp"
                            android:text="1"
                            android:id="@+id/etQty"
                            android:inputType="number"
                            android:fontFamily="@font/popmed"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:text="Masukkan"
                            android:id="@+id/btnMasukkan"
                            android:layout_height="wrap_content"
                            app:cornerRadius="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"/>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>